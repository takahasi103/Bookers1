<h1 class="title">Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error
  <ul>
    <% @book.errors.full_messages.each do |error_message| %>
      <%= error_message %>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
